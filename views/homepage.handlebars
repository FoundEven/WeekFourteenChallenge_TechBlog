<div class="container-fluid postit">
    {{#each posts as |post|}}
    <div class="border border-5">
        <div class="container-fluid">
            <div class="container-fluid">
                <h2>{{post.title}}</h2>
            </div>
            <p class="container-fluid">
                {{post.description}}
            </p>
        </div>
        <div class="container-fluid">
            <p>
                Post made by: {{user.username}}
            </p>
        </div>
    </div>
    {{/each}}
</div>